<h1><%= t('posts.new.page_title') %></h1>
<%= form_for @post do |f| %>
 
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@post.errors.count, "error") %> prohibited
        this post from being saved:
      </h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label t( 'posts.new.title' ) %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label t( 'posts.new.img_url' ) %>
    <%= f.text_field :img_url%>
  </p>

  <p>
    <%= f.label t( 'posts.new.author' ) %>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label t ('posts.new.body' ) %>
    <%= f.text_area :body %>
  </p>
 
  <p>
    <%= f.submit t ( 'posts.new.create.btn' ) %>
  </p>
 
<% end %>

<%= link_to 'Back', posts_path %>
